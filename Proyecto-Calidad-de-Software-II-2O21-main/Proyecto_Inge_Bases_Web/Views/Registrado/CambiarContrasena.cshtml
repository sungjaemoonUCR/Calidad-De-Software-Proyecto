@model Proyecto_Inge_Bases_Web.Models.CambiarContrasenaModel

@{
    ViewBag.Title = "Crear nueva contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        label
        {
            padding-left: 15px;
            width:200px;
            float:left;
            text-align:left
        }

        input[type=text]
        {
            width:200px;
            float:left;
        }
    </style>
</head>

@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@

    <div class="card mx-auto text-center" style="width: 32rem; padding: 0px 0px 45px 0px; margin-top: 35px">
        <div class="card-header text-left" style="padding:25px">
            <h2>&nbsp;&nbsp;&nbsp;&nbsp;Cambiar contraseña</h2>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group"style="text-align:center">
            <br/>
            <label class="required">Nueva contraseña</label>
            <div class="text-left">
                @Html.EditorFor(model => model.NuevaContrasena, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NuevaContrasena, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group"style="text-align:center">
            <label class="required">Confirmar contraseña</label>
            <div class="text-left">
                @Html.EditorFor(model => model.ConfirmarContrasena, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ConfirmarContrasena, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display: none;">
            @Html.LabelFor(model => model.CodigoCambio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CodigoCambio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CodigoCambio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Cambiar contraseña" class="btn btn-info" style="background-color:  #00c0f3;" />
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div style="text-align: center;">
        <button class="btn btn-info" style="background-color:  #00c0f3;" type="button" onclick="location.href = '@Url.Action("Index", "Home")'"> Volver a la página principal</button>
    </div>
}

