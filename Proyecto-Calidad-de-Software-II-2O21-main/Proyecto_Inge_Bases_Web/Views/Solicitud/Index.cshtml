@model Proyecto_Inge_Bases_Web.Models.Producto
@{
    ViewBag.Title = "Index";
}
<head>
    <style style="border:1px solid black;margin-left: 100px ;margin-right:auto;">

        .cuerpo {
            margin: auto;
            width: 80%;
            padding: 30px;
            background: rgb(255, 255, 255);
        }
    </style>
</head>

<!--Portada-->
<div class="cuerpo" style="margin-bottom: 250px">
