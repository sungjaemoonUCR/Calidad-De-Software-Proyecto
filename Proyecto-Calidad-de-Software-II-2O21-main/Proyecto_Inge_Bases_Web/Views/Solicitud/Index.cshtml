                    <img src="https://i2.wp.com/www.bicifan.uy/wp-content/uploads/2016/09/producto-sin-imagen.png?fit=862%2C1104&ssl=1" style="width:150px; height:200px" />
                </th>
                <th style="text-align: center; vertical-align:middle">
                    @**@
                    <p>Lucia Perez</p>
                </th>
                <th style="text-align: center; vertical-align:middle">
                    @* @Html.DisplayFor(modelItem => item.Nombre)*@
