            </tr>
        </tbody>

    </table>
    <!--Boton para regresar a "mis productos"-->
    <div style="text-align: right">
        <button class="btn btn-info" style="background-color:  #00c0f3" type="button" onclick="location.href = '@Url.Action( "Index", "Producto")'">Volver</button>
