@model PagedList.IPagedList<Proyecto_Inge_Bases_Web.Models.Producto>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Recibe";
}
<head>
    <style style="border:1px solid black;margin-left: 100px ;margin-right:auto;">
        

        .cuerpo {
            margin: auto;
            width: 80%;
            padding: 10px;
            background: rgb(255, 255, 255);
        }

        
    </style>
</head>

<div class="cuerpo">
    <div class="text-muted" style="margin-top: 20px; margin-left : 0px">
        <h2>Mis productos publicados</h2>
    </div>
    <table class="table">
        
        <tbody>
            @foreach (var item in Model)
            {
                if (item.Estado == true  && item.Publicado == true)
                {
                    <tr>
                        <td span style="width: 250px">
                            <p style="text-align: center; ">
                                @if (item.ProductoImagen1 == null)
                                {
                                <img src="https://pngimage.net/wp-content/uploads/2018/06/imagen-no-disponible-png-4.png" style="width:150px; height:150px">
                                }
                                else
                                {
                                <img id="idsrc1" src="data:image/png;base64,@Convert.ToBase64String(item.ProductoImagen1)" alt="Imagen" style="width:150px; height:150px" />
                                }
                            </p>
                        </td>
                        <td align="justify" style="vertical-align:middle; padding-right:0px">
                            <h4> @Html.DisplayFor(modelItem => item.Nombre)</h4>
                            <h6 style="color:lightseagreen">₡@Html.DisplayFor(modelItem => item.PrecioEstimado)</h6>
                        </td>
                        <td style="vertical-align:middle">
                            Estado:<br />
                            @Html.DisplayFor(modelItem => item.Condicion)
                        </td>
                        <td align="justify" style="vertical-align:middle; padding-right:0px">
                            @if (item.Publicado == true)
                            {
                                <p>Publicado</p>
                            }
                            else if (item.Publicado == false)
                            {
                                <p>Sin publicar</p>
                            }
                            else
                            {
                                <p>--</p>
                            }
                        </td>
                        <td align="justify" style="vertical-align:middle; padding-right:0px">                        
                            <button class="btn btn-info" style="background-color:  #00c0f3" type="button" onclick="location.href = '@Url.Action("Solicitud", "Notifications", new { p1 = item.ProductoID })'"> Solicitudes</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



