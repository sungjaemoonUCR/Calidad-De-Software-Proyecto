                    <style>
                        .mySlides {
                            display: none;
                        }
                    </style>
                    @if (Model.ProductoImagen1 != null || Model.ProductoImagen2 != null || Model.ProductoImagen3 != null)
                    {
                        if (Model.ProductoImagen1 != null && (Model.ProductoImagen2 == null && Model.ProductoImagen3 == null))
